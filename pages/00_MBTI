import streamlit as st

# MBTI별 포켓몬 추천과 이유
mbti_pokemon = {
    "INTJ": ("뮤츠", "조용하지만 지적이며, 전략적인 사고를 가진 타입으로 뮤츠와 잘 어울립니다."),
    "INTP": ("프리져", "지적 탐구심이 강하고 독립적인 성향이 프리져의 고고한 이미지와 닮았습니다."),
    "ENTJ": ("리자몽", "리더십과 추진력이 뛰어난 ENTJ는 강력하고 카리스마 넘치는 리자몽과 잘 어울립니다."),
    "ENTP": ("피카츄", "창의적이고 에너지 넘치는 ENTP는 언제나 활발한 피카츄와 찰떡입니다."),
    "INFJ": ("루기아", "이상주의적이고 신비로운 성향의 INFJ는 전설의 포켓몬 루기아와 닮았습니다."),
    "INFP": ("이브이", "다정하고 순수한 마음을 가진 INFP는 다양한 가능성을 가진 이브이와 잘 어울립니다."),
    "ENFJ": ("라프라스", "다정하고 배려심 깊은 ENFJ는 사람을 돕는 라프라스와 비슷한 면이 많습니다."),
    "ENFP": ("토게피", "긍정적이고 밝은 성격의 ENFP는 귀엽고 행복을 전하는 토게피와 잘 맞습니다."),
    "ISTJ": ("거북왕", "신중하고 책임감 있는 ISTJ는 안정감 있는 거북왕과 어울립니다."),
    "ISFJ": ("해피너스", "다른 사람을 돌보는 것을 좋아하는 ISFJ는 치유 능력을 가진 해피너스와 닮았습니다."),
    "ESTJ": ("카이리키", "현실적이고 조직적인 ESTJ는 강인함과 리더십을 가진 카이리키와 어울립니다."),
    "ESFJ": ("푸린", "사교적이고 친절한 ESFJ는 모두를 즐겁게 해주는 푸린과 잘 어울립니다."),
    "ISTP": ("팬텀", "조용하면서도 호기심 많은 ISTP는 그림자처럼 빠르고 분석적인 팬텀과 비슷합니다."),
    "ISFP": ("부스터", "감성적이고 자유로운 ISFP는 따뜻한 불꽃을 지닌 부스터와 닮았습니다."),
    "ESTP": ("갸라도스", "모험심 넘치고 직설적인 ESTP는 폭발적인 갸라도스의 에너지와 잘 맞습니다."),
    "ESFP": ("고라파덕", "재밌고 개성 강한 ESFP는 예측 불가한 매력의 고라파덕과 닮았습니다."),
}

st.title("MBTI 포켓몬 궁합 추천기")
st.write("당신의 MBTI에 가장 어울리는 포켓몬과 그 이유를 알려드립니다!")

# MBTI 선택
mbti_list = list(mbti_pokemon.keys())
selected_mbti = st.selectbox("당신의 MBTI를 선택하세요", mbti_list)

# 결과 출력
if st.button("포켓몬 추천 받기"):
    pokemon, reason = mbti_pokemon[selected_mbti]
    st.subheader(f"🎉 {selected_mbti} 유형에게 어울리는 포켓몬은...")
    st.markdown(f"## 🧬 {pokemon}")
    st.write(f"**이유:** {reason}")
